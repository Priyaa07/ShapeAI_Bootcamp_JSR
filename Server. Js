state = {
step: 1,
firstname: '',
lastname: '',
email: '',
phone: '',
github: '',
linkedin: '',
facebook: '',
instagram: ''
}
nextStep = () => {

const {step} = this.state;

this.setState ({

step: step + 1,

});

};

prevStep = () => {

const {step} = this.state;

this.setState ({

step: step - 1,

});

};

handleChange = ({target: {value, name}}) => {

this.setState ({[name]: value});

};

